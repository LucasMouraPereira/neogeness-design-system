{
  "name": "neo-geness",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "commitizen": "^4.3.0",
    "eslint": "^8.57.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    },
    "lint-staged": {
      "*.{js, jsx,ts,tsx}": [
        "eslint --quiet --fix"
      ],
      "*.{json,js,ts,jsx,tsx,html}": [
        "prettier --write --ignore-unknown"
      ]
    }
  }
}
